<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <link rel="icon" href="./favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;500;600;700;800&display=swap"
        rel="stylesheet" />
    <script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.4.0/model-viewer.min.js"></script>

    <title>SmartCore</title>
    <style>
        .button {
            border-color: #dbdbdb;
            border-width: 1px;
            color: #363636;
            justify-content: center;
            padding: calc(0.5em - 1px) 1em;
            text-align: center;
            white-space: nowrap;
            box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.15);
            cursor: pointer;
        }

        .button:hover {
            box-shadow: 0px 10px 20px 2px rgba(0, 0, 0, 0.05);
        }

        .mr-2 {
            margin-right: 7px;
            margin-top: 6px;
        }

        .box {
            box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>

<body>
    <div id="view3d" class="view3d-wrapper box" style="height: 95vh; width: 95vw; margin: 0 auto">
        <model-viewer style="height: 95vh; width: 95vw;" src="https://modelos3d.s3.amazonaws.com/modelo<%= model %>.glb"
            ar ar-scale="fixed" camera-controls touch-action="pan-y" alt="Modelo <%= model %>" shadow-intensity="2"
            skybox-height="2m" max-camera-orbit="auto 90deg auto" xr-environment>
            <div class="view3d-ar-overlay" style="height: 38px; width: 100%;display: flex;justify-content: center;">
                <button id="btn-alarm" class="button mr-2">Modelo 1</button>
                <button id="btn-payphone" class="button mr-2">Modelo 2</button>
                <button id="btn-plant" class="button mr-2">Model 3</button>
            </div>
        </model-viewer>
    </div>
    <script>
        const buttons = [
            {
                el: document.getElementById("btn-alarm"),
                src: "https://modelos3d.s3.amazonaws.com/modelo1.glb",
            },
            {
                el: document.getElementById("btn-payphone"),
                src: "https://modelos3d.s3.amazonaws.com/modelo2.glb",
            },
            {
                el: document.getElementById("btn-plant"),
                src: "https://modelos3d.s3.amazonaws.com/modelo3.glb",
            },
        ];

        const modelViewer = document.querySelector("model-viewer");

        buttons.forEach((btn) => {
            btn.el.addEventListener("click", () => {
                modelViewer.src = btn.src;
            });
        });
    </script>
</body>

</html>